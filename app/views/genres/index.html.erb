
<!-- ジャンル登録フォーム -->
<div class="row mt-5">
  <div class="col-xs-4">
  <h4>ジャンル登録</h2>
  <%= form_for(@genre, url: genres_path) do |f| %>
    <div class="mt-4">
      <%= f.label :genre_name,"ジャンル名", class:"" %>
    </div>
    <div>
      <%= f.text_field :genre_name, class:"" %>
    </div>
    <div class="">
      <%= f.submit "登録する", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>

  <!-- ジャンル一覧表示-->
  <div class="col">
    <table class="table">
      <tr class="thead-light">
        <th></th>
        <th>名称</th>
        <th>登録件数</th>
      </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td></td>
      <td>
    	  <%= genre.genre_name %>
      </td>
      <td>
        <p><%= genre.reviews.count %> 件</p>
      </td>
    </tr>
    <% end %>
    </table>
  </div>
</div>