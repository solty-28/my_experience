<div class="row d-flex mt-5">
  <div class="col-xs-3 mr-5">
    <ul class="">
    	<div><span>メニュー</span></div>
      <div class="mt-1">
        <%= link_to "ジャンル管理", genres_path, class: "" %>
      </div>
      <div class="mt-1">
        <%= link_to "投稿一覧", reviews_path, class: "" %>
      </div>
      <div class="mt-1">
        <%= link_to "新規投稿", new_review_path, class: "" %>
      </div>
    </ul>
  </div>

  <div class="col">
  	
  	<h2>レビュー一覧</h2>
  	<table class="table">
  	  <tr class="thead-light">
  	  	<th>評価点</th>
  	  	<th>タイトル</th>
  	  	<th>ジャンル</th>
  	  	<th>タグ</th>
  	  </tr>

  	
  	<% @reviews.each do |review| %>
  	  <tr>
  	  	<td>
  	      <div id="star-rate-<%= review.id %>"></div>
  	      <script>
          $('#star-rate-<%= review.id %>').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            readOnly: true,
            score: <%= review.rating %>,
          });
          </script>
        </td>

        <td><%= link_to review.title, review_path(review) %></td>

        <td><%= review.genre.genre_name %></td>

        <td>
          <% review.tag_list.each do |tag| %>
  	        <span class="badge.badge-primary.mr-1.p-2"><%= tag %></span>
  	      <% end %>
  	    </td>
  	  </tr>
  	<% end %>
    </table>
  </div>

</div>
